{
  "name": "@vibe-remote/claude-wrapper",
  "version": "7.0.58",
  "description": "TypeScript wrapper for Claude flow automation",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/claude-wrapper.mjs",
      "types": "./dist/claude-wrapper.d.ts"
    }
  },
  "bin": {
    "claude-wrapper": "./dist/claude-wrapper.mjs"
  },
  "files": [
    "dist",
    "templates"
  ],
  "scripts": {
    "build": "tsup",
    "build:watch": "tsup --watch",
    "clean": "rm -rf dist",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "claude",
    "automation",
    "cli",
    "typescript"
  ],
  "dependencies": {
    "@vibe-remote/shared-utils": "workspace:*"
  },
  "peerDependencies": {
    "typescript": ">=5.0.0"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "devDependencies": {
    "tsup": "^8.5.0"
  }
}
