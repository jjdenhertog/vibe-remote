{
  "name": "@vibe-remote/vibe-kanban-api",
  "version": "1.0.0",
  "description": "Shared API client for Vibe Kanban operations",
  "type": "module",
  "exports": {
    "./api/*": {
      "import": "./dist/api/*.js",
      "types": "./dist/api/*.d.ts"
    },
    "./types/*": {
      "import": "./dist/types/*.js",
      "types": "./dist/types/*.d.ts"
    },
    "./utils/*": {
      "import": "./dist/utils/*.js",
      "types": "./dist/utils/*.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "clean": "rm -rf dist",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "vibe-kanban",
    "api",
    "client",
    "typescript"
  ],
  "peerDependencies": {
    "typescript": ">=5.0.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}