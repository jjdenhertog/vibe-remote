  "peerDependencies": {
    "next": ">=14.0.0",
    "typescript": ">=5.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "next": "^15.0.0"
  },
  "engines": {
    "node": ">=20.0.0"
