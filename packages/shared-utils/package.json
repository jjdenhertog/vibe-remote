{
  "name": "@vibe-remote/shared-utils",
  "version": "1.0.0",
  "description": "Shared utilities for Vibe Remote Workstation",
  "type": "module",
  "exports": {
    "./preferences": {
      "import": "./dist/preferences.js",
      "types": "./dist/preferences.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
