{
  "name": "@vibe-remote/shared-utils",
  "version": "1.0.0",
  "description": "Shared utilities for Vibe Remote Workstation",
  "type": "module",
  "exports": {
    "./preferences": {
      "import": "./dist/preferences.js",
      "types": "./dist/preferences.d.ts"
    },
    "./prompt-utils": {
      "import": "./dist/prompt-utils.js",
      "types": "./dist/prompt-utils.d.ts"
    },
    "./preference-context": {
      "import": "./dist/preference-context.js",
      "types": "./dist/preference-context.d.ts"
    },
    "./file-preferences": {
      "import": "./dist/file-preferences.js",
      "types": "./dist/file-preferences.d.ts"
    },
    "./route-factory": {
      "import": "./dist/route-factory.js",
      "types": "./dist/route-factory.d.ts"
    },
    "./automation-types": {
      "import": "./dist/automation-types.js",
      "types": "./dist/automation-types.d.ts"
    }
  },
  "files": [
    "dist"
