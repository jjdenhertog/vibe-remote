{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "../../config/typescript/react.json",
  "compilerOptions": {
    "baseUrl": ".",
    "noEmit": true,
    "composite": true,
    "paths": {
      "@/*": ["./*"],
      "@/components/*": ["./components/*"],
      "@/app/*": ["./app/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
